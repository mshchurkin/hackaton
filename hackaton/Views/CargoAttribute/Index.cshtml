@model IEnumerable<hackaton.CargoAttribute>

@{
    ViewBag.Title = "Список атрибутов груза";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Добавление атрибута", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Attribute)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Attribute)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.ActionLink("Редактирование", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Информация об атрибуте", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удаление", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
